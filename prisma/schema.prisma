
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Participant {
  id         String   @id @default(cuid())
  fullName   String
  email      String   @unique
  giftIdea   String
  emoji      String   @default("üê∂")
  coupleId   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  assignmentsGiver     Assignment[] @relation("giver")
  assignmentsRecipient Assignment[] @relation("recipient")
}

model Draw {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  assignments Assignment[]
}

model Assignment {
  id          String     @id @default(cuid())
  drawId      String
  giverId     String
  recipientId String

  draw       Draw        @relation(fields: [drawId], references: [id])
  giver      Participant  @relation("giver", fields: [giverId], references: [id])
  recipient  Participant  @relation("recipient", fields: [recipientId], references: [id])

  @@unique([drawId, giverId])
}
